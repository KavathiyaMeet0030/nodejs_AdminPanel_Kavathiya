    <h1 class="font-header text-center mt-3 mb-2 " style="font-family: cursive;">All Blogs</h1><hr><hr><br>

    <div class="container">
        <div class="row d-flex flex-wrap">
            <% blogs.forEach(blog => { %>
                <div class="col-4">
                    <div class="form-container-all-blog mb-5">
                        <div class="card-body">
                            <% if(blog.image) { %>
                                <img src="/<%= blog.image %>" alt="Blog Image" class="blog-image">
                            <% } %>
                            <h2 class="font-title mt-3">Title :  
                                <%= blog.title %></h2>
                            <p class="font-content">Content :  <%= blog.content %></p>


                            <div>
                                <form action="/allBlogs/<%= blog._id %>" method="POST">
                                    <textarea name="comment" rows="2" placeholder="Write your comment..." required class="w-12" style="width:100%;"></textarea>
                                    <button type="submit" class="sign">Post Comment</button>
                                  </form>
                            </div>
                            
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

